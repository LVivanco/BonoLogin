@using BonoLogin.Models
@model BonoLogin.Models.PGracia

@{
    ViewBag.Title = "EditPG";

}

<h2>EditPG</h2>


@foreach (var pg in (List<PGracia>)ViewBag.ListPGO)
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Tipo, "Periodo " + pg.Periodo.ToString() + ": ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Tipo, (List<SelectListItem>)ViewBag.TiposPG, htmlAttributes: new { @class = "custom-select" })
                    @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                </div>
            </div>
             <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>

        </div>
    }
}

    <div>
        @Html.ActionLink("Back to Details", "Details", new { id = ViewBag.FichaId })
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
