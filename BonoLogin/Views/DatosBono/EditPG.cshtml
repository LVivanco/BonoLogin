@model BonoLogin.Models.PGracia

@{
    ViewBag.Title = "Periodo de Gracia";
    int id_ficha = (int)Model.DatosBonoId;
    string periodo = Model.Periodo.ToString();
}

<h2>Editar tipo de Periodo de Gracia</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Plazo gracia del periodo "@periodo"</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Periodo)
        @Html.HiddenFor(model => model.DatosBonoId)

        <div class="form-group">
            @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Tipo, (List<SelectListItem>)ViewBag.TiposPg, htmlAttributes: new { @class = "custom-select" })
                @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar al detalle", "Details", new { id = id_ficha})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
