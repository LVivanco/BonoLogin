@model BonoLogin.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<!---------RENDER BODY----------->
<div class="container w-100 d-flex justify-content-center">
    <div class="card text-center mt-5 p-3 shadow">
        <h4>Registrarse</h4>
        <hr />
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "p-4", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h6 class="text-left">Cree una cuenta nueva:</h6>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <input type="submit" class="btn bg-own-green-dark" value="Registrarse" />
        }
    </div>
</div>
<!-----FIN DE RENDER BODY------->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
