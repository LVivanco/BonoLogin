@model BonoLogin.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar contraseña";
}

<!--BODY-->
<div class="container w-100 d-flex justify-content-center">
    <div class="card text-center mt-5 p-3 shadow">
        <h2>Cambiar contraseña</h2>
        <hr />
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <input type="submit" value="Cambiar contraseña" class="btn btn-danger" />
        }
    </div>
</div>

<!--Espacio en blanco-->
<div style="height: 10vh;"></div>
<!--Fin Espacio en blanco-->
<!--BODY-->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}