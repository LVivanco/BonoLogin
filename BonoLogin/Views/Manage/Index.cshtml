@model BonoLogin.Models.IndexViewModel
@{
    ViewBag.Title = "Administrar";
}

<!--BODY-->
<div class="container w-100">
    <div class="card text-center mt-5 p-3 shadow">
        <h2>Administrar cuenta</h2>
        <hr />
        <dl class="dl-horizontal">
            <p class="text-success">@ViewBag.StatusMessage</p>
            <dt>Contraseña:</dt>
            <dd>
                @if (Model.HasPassword)
                {
                    @Html.ActionLink("Cambiar la contraseña", "ChangePassword", routeValues: null, htmlAttributes: new { @class = "btn btn-danger own-hover" })
                }
                else
                {
                    @Html.ActionLink("Crear", "SetPassword", routeValues: null, htmlAttributes: new { @class = "btn btn-danger own-hover" })
                }
             </dd>
        </dl>
    </div>
</div>

<!--Espacio en blanco-->
<div style="height: 50vh;"></div>
<!--Fin Espacio en blanco-->
